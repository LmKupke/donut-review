<h1> New Donut Form </h1>

<%= form_for @donut do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :vendor_name %>:
  <%= f.text_field :vendor_name %><br />

  <%= f.label :image %>:
  <%= f.url_field :image %><br />

  <%= f.label :description %>:
  <%= f.text_area :description %><br />

  <%= f.label :user_id %>:
  <%= f.number_field :user_id, min: 1 %><br />

   <%= f.submit %>
<% end %>
