<div class="small-12 large-12 medium-12 crop columns">
  <div class="small-centered large-centered medium-centered">
    <h1 class= "site-title shadow">Donut Judge Me</h1>
  </div>
</div>

<% if user_signed_in? %>
  <div class="add-new-links home_buttons">
    <%= link_to "Add New Donut", new_donut_path, class: 'add-donut-link' %>
    <%= link_to "Add New Vendor", new_vendor_path, class: 'add-vendor-link' %>
  </div>
<% end %>

<div class="donut-tiles">
  <% @donuts.each do |donut| %>
    <ul class="donut-list">
        <div class="small-6 medium-4 large-4 columns">
          <div class="text-center">
            <%= image_tag(donut.image, id: "individual-donut",
            class: "donut-image-index") %>
          </div>
          <div class="small-10 row name">
            <%= link_to "#{donut.name}", donut_path(donut) %>
          </div>
        </div>
    </ul>
  <% end %>
  <% if @donuts.length >= 12 %>
    <%= paginate @donuts %>
  <% end %>
</div>
